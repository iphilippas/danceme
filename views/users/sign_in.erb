<!DOCTYPE html>
<html>
	<head>
		<%= css :application, :media => 'screen' %>
	</head>
	
	<body class="sign">
		<div class="sign-box">
			<div class="row">
				<div class="medium-12 small-12 large-12 columns text-center"><br />
					<h4>DanceMeCms Sign In</h4> 
				</div>
			</div>
			
			<div class="row">
				
					<form action="/users/authenticate" method="POST">
						
						<div class="row">
							<div class="medium-12 columns">
								<label>Email
									<input type="text" name="email"/>
								</label>
							</div>
						</div>	
						
							<div class="row">
							<div class="medium-12 columns">
								<label>Password
									<input type="password" name="password"/>
								</label>
							</div>
						</div>	
						<input class="button" id="button_submit" name="submit" type="submit" value="Sign In" />
					</form>
			</div>	
		</div>	
	</body>
</html>
